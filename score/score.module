	$rows=array();
	
	$query=db_select('students','s')->fields('s',array('uid','idcard_number','ucategory','name','gender','profession_major'));
	// FIXME: HACK FOR CELLA
	if(in_array($profession->pid, array('D603', 'D604', 'D716','D717'))) {
